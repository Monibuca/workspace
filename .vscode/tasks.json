{
	"version": "2.0.0",
	"tasks": [
    {
      "type": "go",
      "label": "go: build package",
      "command": "build",
      "args": [
        "-o",
        "monibuca",
        "main.go"
      ],
      "problemMatcher": [
        "$go"
      ],
      "options": {
        "cwd": "${workspaceRoot}/monibuca"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "go",
      "label": "go: build linux",
      "command": "build",
      "args": [
        "-o",
        "monibuca_linux",
        "main.go"
      ],
      "options": {
        "env": {
          "GOOS": "linux",
          "GOARCH": "amd64"
        },
        "cwd": "${workspaceRoot}/monibuca"
      },
      "problemMatcher": [
        "$go"
      ],
      "group": {
        "kind": "build"
      }
    },
    {
      "type": "go",
      "label": "go: build linux arm64",
      "command": "build",
      "args": [
        "-o",
        "monibuca_linux_arm64",
        "main.go"
      ],
      "options": {
        "env": {
          "GOOS": "linux",
          "GOARCH": "arm64"
        },
        "cwd": "${workspaceRoot}/monibuca"
      },
      "problemMatcher": [
        "$go"
      ],
      "group": {
        "kind": "build"
      }
    },
    {
      "type": "go",
      "label": "go: build windows amd64",
      "command": "build",
      "args": [
        "-o",
        "monibuca_win64.exe",
        "main.go"
      ],
      "options": {
        "env": {
          "GOOS": "windows",
          "GOARCH": "amd64"
        },
        "cwd": "${workspaceRoot}/monibuca"
      },
      "problemMatcher": [
        "$go"
      ],
      "group": {
        "kind": "build"
      }
    },
    {
      "type": "shell",
      "label": "pprof heap",
      "command": "go tool pprof -http=localhost:6060 http://localhost:8080/debug/pprof/heap"
    },
    {
      "type": "shell",
      "label": "pprof test.monibuca.com heap",
      "command": "go tool pprof -http=localhost:6060 http://test.monibuca.com:8080/debug/pprof/heap"
    },
    {
      "type": "shell",
      "label": "publish monibuca beta",
      "command": "sh ../tagb.sh",
      "options": {
        "cwd": "${workspaceRoot}/monibuca"
      },
    },
    {
      "type": "shell",
      "label": "upx linux",
      "command": "upx -9 -o monibuca_linux_upx monibuca_linux",
      "options": {
        "cwd": "${workspaceRoot}/monibuca"
      },
    },
    {
      "type": "shell",
      "label": "upx windows",
      "command": "upx -9 -o monibuca_win64_upx.exe monibuca_win64.exe",
      "options": {
        "cwd": "${workspaceRoot}/monibuca"
      },
    }
  ]
}